// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model DatasetSource {
  id        String   @id @default(uuid())
  name      String
  url       String
  frequency String   // e.g. "daily", "hourly"
  metrics   Metric[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Metric {
  id              String        @id @default(uuid())
  name            String
  unit            String?
  datasetSourceId String
  datasetSource   DatasetSource @relation(fields: [datasetSourceId], references: [id])
  data            UrbanData[]
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}

model UrbanData {
  id        String   @id @default(uuid())
  metricId  String
  metric    Metric   @relation(fields: [metricId], references: [id])
  value     Json     // Store flexible data
  timestamp DateTime
  createdAt DateTime @default(now())

  @@index([timestamp])
  @@index([metricId])
}

model SecurityIncident {
  id          String   @id @default(uuid())
  type        String
  description String?
  latitude    Float
  longitude   Float
  zone        String?  // e.g. "Comuna 1" if resolvable
  timestamp   DateTime @default(now())
  createdAt   DateTime @default(now())

  @@index([timestamp])
  @@index([type])
}
